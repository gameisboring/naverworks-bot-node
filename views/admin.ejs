<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full max-w-xs mx-auto">
      <div
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 updateIO-wrapper"
      >
        <div class="mb-4">
          <h4
            class="font-bold leading-tight text-center text-3xl mt-0 mb-6 text-blue-600"
          >
            출퇴근 시간 입력
          </h4>
          <label class="block text-gray-700 text-sm font-bold mb-3" for="name">
            이름
          </label>
          <select
            class="input-name form-select appearance-none block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
            aria-label="Default select example"
            name="name"
          >
            <option selected disabled>이름선택</option>
            <option value="강다영">강다영</option>
            <option value="강수빈">강수빈</option>
            <option value="김민중">김민중</option>
            <option value="문창환">문창환</option>
            <option value="선현규">선현규</option>
            <option value="이재근">이재근</option>
          </select>
        </div>
        <div class="mb-3">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="date"
            >날짜선택
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline input-date"
            name="date"
            type="date"
          />
        </div>
        <div class="mb-3">
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="in_time"
            >출근시간
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline input-in"
            id="in_time"
            name="in_time"
            type="time"
          />
        </div>
        <div class="mb-3">
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="out_time"
            >퇴근시간
          </label>
          <input
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline input-out"
            id="out_time"
            name="out_time"
            type="time"
          />
        </div>
        <div class="flex items-center justify-center">
          <button
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline subBtn"
            type="button"
          >
            제출하기
          </button>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript">
    const updateIO_subBtn = document.querySelector('.updateIO-wrapper .subBtn')
    updateIO_subBtn.addEventListener('click', function (e) {
      var name = document.querySelector('.updateIO-wrapper .input-name').value
      var date = document.querySelector('.updateIO-wrapper .input-date').value
      var out_time = document.querySelector(
        '.updateIO-wrapper .input-out'
      ).value
      var in_time = document.querySelector('.updateIO-wrapper .input-in').value
      in_time.addEventListener
      if (name && date && in_time && out_time) {
        if (in_time > out_time) {
          alert('출근시간 > 퇴근시간')
          console.log('업데이트 안해')
          return
        }
        fetch('/updateIO', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            name: name,
            date: date,
            out_time: out_time,
            in_time: in_time,
          }),
        }).then((response) => {
          console.log(response)
        })
      } else {
        alert('모두 입력하세요')
      }
    })
  </script>
</html>
